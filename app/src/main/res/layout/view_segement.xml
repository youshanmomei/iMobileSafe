<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/view_pdv_tv_left"
        android:layout_width="80dp"
        android:background="@drawable/segment_unlock_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="未加锁"
        android:textColor="@color/segement_textcolor_selector"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/view_pdv_tv_right"
        android:background="@drawable/segement_lock_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="已加锁"
        android:textColor="@color/segement_textcolor_selector"
        android:layout_width="80dp"
        android:layout_height="36dp" />

</LinearLayout>